{
    "$schema": "http://json-schema.org/schema#",
    "type": "object",
    "properties": {
        "binderhub": {
            "type": "object",
            "properties": {
                "jupyterhub": {
                    "type": "object",
                    "properties": {
                        "singleuser": {
                            "type": "object",
                            "properties": {
                                "cpu": {
                                    "type": "object",
                                    "properties": {
                                        "limit": {
                                            "type": "integer",
                                            "title": "Notebook CPUs",
                                            "description": "The number of CPUs to allocate to each user notebook.",
                                            "minimum": 1,
                                            "default": 1
                                        }
                                    },
                                    "required": ["limit"]
                                },
                                "memory": {
                                    "type": "object",
                                    "properties": {
                                        "limit": {
                                            "type": "string",
                                            "title": "Notebook RAM",
                                            "description": "The amount of RAM to allocate to each user notebook.",
                                            "pattern": "^[1-9][0-9]*G$",
                                            "default": "2G"
                                        }
                                    },
                                    "required": ["limit"]
                                },
                                "storage": {
                                    "type": "object",
                                    "properties": {
                                        "capacity": {
                                            "type": "string",
                                            "title": "Notebook storage",
                                            "description": "The amount of storage to allocate to each user notebook. \nThis is dynamically allocated from the tenancy quota.",
                                            "pattern": "^[1-9][0-9]*Gi$",
                                            "default": "10Gi"
                                        }
                                    },
                                    "required": ["capacity"]
                                }
                            },
                            "required": ["cpu", "memory", "storage"]
                        }
                    },
                    "required": ["singleuser"]
                },
                "registry": {
                    "type": "object",
                    "properties": {
                        "password": {
                            "type": "string",
                            "title": "Container registry password",
                            "description": "The password used to authenticate with the in-cluster container registry. \nThis should be kept secret from Hub users otherwise they will be able to modify registry images from within notebooks!"
                        }
                    },
                    "required": ["password"]
                }
            },
            "required": ["jupyterhub", "registry"]
        },
        "registry": {
            "type": "object",
            "properties": {
                "storage": {
                    "type": "object",
                    "properties": {
                        "capacity": {
                            "type": "string",
                            "title": "Container registry storage",
                            "description": "The amount of storage to allocate to the BinderHub container registry. \nThis is dynamically allocated from the tenancy quota.",
                            "pattern": "^[1-9][0-9]*Gi$",
                            "default": "10Gi"
                        }
                    },
                    "required": ["capacity"]
                },
                "password": {
                    "type": "string",
                    "title": "Password for the in-cluster container regi",
                    "description": "Required for securing the local registry. \nShould be set to a long random value, e.g. `openssl rand -hex 32`.",
                    "minLength": 8
                }
            },
            "required": ["storage", "password"]
        }
    },
    "required": ["binderhub", "registry"]
}
